package com.movieapp.service;

import java.util.Arrays;
import java.util.List;

public class MovieDetails {
	public static List<String> showMovieDetails(String language) {
		List<String> hollywood = Arrays.asList("Up","Avataar","Avataar: The Way of Water", "Uncharted");
		List<String> bollywood = Arrays.asList("Chennai Express", "Ra-One", "Zindagi Na Milegi Dobara");
		List<String> tollywood = Arrays.asList("Mr.Perfect", "Darling", "Bahubali", "Varsham");
		List<String> sandalwood = Arrays.asList("KGF - 1", "KGFG - 2", "Mr. & Mrs. Ramachari", "Googly");
		
		if(language.equalsIgnoreCase("hollywood")) return hollywood;
		else if(language.equalsIgnoreCase("tollywood")) return tollywood;
		else if(language.equalsIgnoreCase("bollywood")) return bollywood;
		else if(language.equalsIgnoreCase("sandalwood")) return sandalwood;

		return null;
	}
}
